// setting fade
.fullpage-wrapper 
	width: 100%!important;
	transform: none!important;
.fp-section 
	width: 100%!important;
	position: absolute;
	left: 0;
	top: 0;
	visibility: hidden;
	opacity: 0;
	//z-index: 0;
	transition: all 1.5s ease-in-out;
	-webkit-transform: scale(1.1);
	-moz-transform: scale(1.1);
	-ms-transform: scale(1.1);
	-o-transform: scale(1.1);
	transform: scale(1.1);
	transition-delay: 1s;
.fp-section.active 
	visibility: visible;
	opacity: 1;
	//z-index: 1;
	-webkit-transform: scale(1);
	-moz-transform: scale(1);
	-ms-transform: scale(1);
	-o-transform: scale(1);
	transform: scale(1);
